{
    "author": {
        "name": "Ragaeeb Haq",
        "url": "https://github.com/ragaeeb"
    },
    "bin": {
        "bpb": "src/cli.ts"
    },
    "bugs": {
        "url": "https://github.com/ragaeeb/big-plump-bird/issues"
    },
    "description": "Local-first Bun + WhisperX transcription pipeline for mixed Arabic and English media.",
    "devDependencies": {
        "@biomejs/biome": "^2.3.14",
        "@types/bun": "^1.3.9"
    },
    "engines": {
        "bun": ">=1.3.9"
    },
    "homepage": "https://github.com/ragaeeb/big-plump-bird#readme",
    "keywords": [
        "bun",
        "whisperx",
        "transcription",
        "sqlite",
        "yt-dlp",
        "arabic",
        "english",
        "cli"
    ],
    "license": "MIT",
    "name": "big-plump-bird",
    "packageManager": "bun@1.3.9",
    "private": false,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ragaeeb/big-plump-bird.git"
    },
    "scripts": {
        "api:dev": "bun src/web-api/server.ts",
        "bpb": "bun src/cli.ts",
        "dev": "bun src/cli.ts --help",
        "dev:web": "bun scripts/dev-web.ts",
        "format": "biome format --write .",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "lint:staged": "bun scripts/lint-staged.ts",
        "postinstall": "bun run setup-git-hooks || true; bun run setup-enhance || true",
        "setup": "bun scripts/setup.ts",
        "setup-enhance": "bun scripts/setup-enhance.ts",
        "setup-git-hooks": "bun scripts/setup-git-hooks.ts",
        "setup-web": "cd apps/web && bun install",
        "setup-whisperx": "bun scripts/setup-whisperx.ts",
        "setup:doctor": "bun scripts/setup-doctor.ts",
        "setup:full": "bun scripts/setup.ts --strict",
        "start": "bun src/cli.ts",
        "test": "bun test",
        "test:e2e": "BPB_RUN_REAL_E2E=1 bun test tests/e2e/youtube-url.e2e.test.ts --max-concurrency=1",
        "test:integration": "bun test tests/integration --max-concurrency=1",
        "test:integration:real": "BPB_RUN_REAL_INTEGRATION=1 bun test tests/integration/real-whisperx.integration.test.ts --max-concurrency=1",
        "web:build": "cd apps/web && bun run build",
        "web:dev": "cd apps/web && bun node_modules/vite/bin/vite.js --host",
        "web:preview": "cd apps/web && bun run preview --host"
    },
    "type": "module",
    "version": "0.2.0"
}
